<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Private Chat</h1>

  <h3 class="text-lg text-gray-600 mb-4">Select a friend:</h3>

  <ul class="w-full max-w-md bg-white shadow-lg rounded-lg p-4 space-y-3">
    <% @user.each_with_index do |user, index| %>
      <% colors = ["bg-blue-500"] %>
      <% user_color = colors[index % colors.length] %>

      <li class="flex items-center justify-between p-4 rounded-lg text-white <%= user_color %> shadow-md">
        <span class="text-lg font-semibold"><%= user.u_name %></span>
        <%= link_to "Chat Now", chat_room_path(user), 
          class: "bg-white text-black px-4 py-2 rounded-lg shadow hover:bg-gray-200 transition duration-300" %>
      </li>
    <% end %>
  </ul>
</div>
