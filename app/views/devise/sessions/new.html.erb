

 <div class="max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-center mb-4">Login</h2>
  
  <%= form_with model: resource, url: session_path(resource_name), local: true, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, class: "block font-semibold" %>
      <%= f.email_field :email, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.label :password, class: "block font-semibold" %>
      <%= f.password_field :password, class: "w-full p-2 border rounded-lg" %>
    </div>

    <%= f.submit "Login", class: "w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-700" %>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-500 font-semibold" %> |
    <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-blue-500 font-semibold" %>
  </div>
</div>
