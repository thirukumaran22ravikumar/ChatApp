<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
  <h2 class="text-2xl font-bold text-center text-gray-700 mb-4">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :u_name, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.text_field :u_name, autofocus: true, autocomplete: "email", class: "w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Sign Up", class: "w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
